<!DOCTYPE html>
<html>
  <head>
    <title>FbLogin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= image_tag(current_user.image) %>
      <%= current_user.name %>
    <% end %>
    <%= yield %>
  </body>
</html>
